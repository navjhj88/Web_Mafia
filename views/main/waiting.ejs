<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="/node_modules/socket.io/client-dist/socket.io.js"></script>
    <title>Documents</title>
    <style>
        label{
            user-select: none;
        }
    </style>
  </head>
  <body>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        방만들기
    </button>
    <div id="container">

    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">방만들기</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <input type="text" id="roomTitle" class="form-control" placeholder="방 제목">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="pass" value="option1">
                    <label class="form-check-label" for="pass">비밀번호 체크</label>
                </div>
                <input type="password" class="form-control" placeholder="비밀번호" id="roomPass" readonly>
            </div>
            <div class="modal-footer">
              <button type="button" id="accept" data-dismiss="modal" class="btn btn-primary">적용</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
            </div>
          </div>
        </div>
      </div>
    <script>
      
      const pass = document.querySelector('#pass');
      const accept = document.querySelector('#accept');
      const container = document.querySelector('#container');
      const socket = io('/waiting');
      socket.emit('join', '대기실');
      {
        const Rooms = <%- JSON.stringify(Rooms) %>;
        const makeRoom = data => {
          let a = document.createElement('a');
          a.innerHTML = data.name;
          console.log(data.id)
          a.href = `/main/room?id=${data.id}`;
          a.dataset.id = data.id;
          container.appendChild(a);
        };
        Rooms.forEach(makeRoom);
        socket.on('ready', data => {
          location.href = `/main/room?id=${data}`;
        });
        socket.on('room', data => {
          if(data.act === 'add'){
            makeRoom(data);
          } else {
            let a = document.querySelector(`[data-id="${data.id}"]`);
            if(a) container.removeChild(a);
          }
          
        });
      }
      
      {
        accept.addEventListener('click', e => {
          const roomTitle = document.querySelector('#roomTitle').value;
          const pass = document.querySelector('#pass');
          const roomPass = pass.checked ? document.querySelector('#roomPass').value : false;
          socket.emit('makeRoom', {roomTitle, roomPass});
        });
        pass.addEventListener('change', e => {
            let roomPass = document.querySelector('#roomPass');
            roomPass.readOnly = !roomPass.readOnly;
        });
      }
    </script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>